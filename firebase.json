{
  "hosting": {
    "public": "hosting_public_dir_for_empty",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "backend-service",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "**",
        "run": {
          "serviceId": "nextjs-frontend-service",
          "region": "asia-northeast1"
        }
      }
    ]
  }
}
